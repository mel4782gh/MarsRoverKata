pipeline {
    agent { any { docker 'maven:3.8.4-openjdk-11-slim' }
          }
    stages {
        stage('build') {
            steps {
            //get maven home path
            def mvnHome = tool name: 'MAVEN_HOME', type: 'maven'
                    sh "${mvnHome}/mvn --version"
                   }
        }
    }
}